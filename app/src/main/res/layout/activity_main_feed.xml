<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="feedMain"
            type="com.anji.babydiary.mainFeed.MainFeedViewModel" />
        <variable
            name="navController"
            type="com.anji.babydiary.gnb.main.NavViewModel" />
        <variable
            name="dailyCheckViewModel"
            type="com.anji.babydiary.common.dailyCheck.DailyCheckViewModel" />
    </data>

<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainFeed.MainFeedActivity"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/naviTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/nav_layout"
            bind:navController="@{navController}"/>

        <LinearLayout
            android:id="@+id/main_category"
            style="@style/MainAppBarSelect"
            android:layout_marginTop="86sp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="@{navController.isVisible()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                style="@style/MainFeedCatOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/MainFeedCatTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp" />
        </LinearLayout>

        <fragment
            android:id="@+id/feedNestedHost"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="99sp"
            android:layout_marginBottom="64sp"
            app:defaultNavHost="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/naviTop"
            app:navGraph="@navigation/feed_navigation" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/add_btn"
            android:background="@color/mainThemeRed"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent" />
        <RadioGroup
            android:id="@+id/radioGroup"
            style="@style/GNBWrapper"
            android:layout_width="match_parent"
            android:layout_height="76sp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="right"
            android:foregroundGravity="center|right"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:paddingLeft="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/tabPopBtn"
                style="@style/GNBPoplular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/tabShopBtn"
                style="@style/GNBShopping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/tabMainBtn"
                style="@style/GNBMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true" />

            <RadioButton
                android:id="@+id/tabTipBtn"
                style="@style/GNBTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/tabMyPageBtn"
                style="@style/GNBMyPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/drawer_inc"
        bind:feedMain = "@{feedMain}"
        bind:dailyCheckViewModel = "@{dailyCheckViewModel}"
        layout="@layout/daily_check_drawer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.drawerlayout.widget.DrawerLayout>

</layout>

